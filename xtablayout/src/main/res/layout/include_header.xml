<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_title"
    style="@style/edit_no_foucs"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/head_bg_dzfk">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@null"
        android:src="@drawable/btn_back_header"/>

    <Button
        android:id="@+id/btn_reseach"
        android:layout_width="@dimen/width_60"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:text="搜索"
        android:textColor="@color/white"/>

    <RelativeLayout
        android:id="@+id/rl_reseach"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_30"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_toLeftOf="@id/btn_reseach"
        android:layout_toRightOf="@id/btn_back"
        android:background="@drawable/reseach_backgroud_setting">

        <ImageView
            android:id="@+id/img_reseach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:src="@drawable/reseach"/>

        <EditText
            android:id="@+id/edt_reseach"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_toRightOf="@+id/img_reseach"
            android:background="@null"
            android:focusableInTouchMode="false"
            android:hint="查找監獄、看守所"
            android:textSize="@dimen/text_size_12"/>
    </RelativeLayout>
</RelativeLayout>
